@{
    ViewBag.Title = "Home Page";
}

<div>
    <h3>Enter the following details to get a cost estimate</h3>
</div>

<div class="form-horizontal">
    <div class="form-group">
        <label for="Length" class="control-label col-md-2">Length</label>
        <div class="col-md-10">
            <input type="text" class="length form-control" id="Length" name="Length" />
        </div>
    </div>
    <div class="form-group">
        <label for="Breadth" class="control-label col-md-2">Breadth</label>
        <div class="col-md-10">
            <input type="text" class="breadth form-control" id="Breadth" name="Breadth" />
        </div>
    </div>
    <div class="form-group">
        <label for="Height" class="control-label col-md-2">Height</label>
        <div class="col-md-10">
            <input type="text" class="height form-control" id="Height" name="Height" />
        </div>
    </div>
    <div class="form-group">
        <label for="Weight" class="control-label col-md-2">Weight</label>
        <div class="col-md-10">
            <input type="text" class="weight form-control" id="Weight" name="Weight" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-10 col-md-offset-2">
            <input type="submit" value="Get Cost" class="btn btn-default getParcelCost" />
        </div>
    </div>

    <label for="Weight" class="control-label col-md-2">Search Result</label>
    <div class="form-group">           
        <div class="col-md-10 searchResult">
            
        </div>
    </div>
</div>